@using myfinance_web_dotnet.Domain
<h1>Plano de Contas </h1>

<br /> 

<a asp-controller="PlanoConta" asp-action="Cadastro" class="btn btn-success">Criar item de plano de conta</a>

<br /><br /> 

<table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Descrição</th>
            <th>Tipo</th>
            <th>#</th>
            <th>#</th>
        </tr>

        @{
            foreach (var item in (List<PlanoConta>)ViewBag.Lista)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Tipo</td>
                    <td><button type="button" class="btn btn-warning" onclick="Editar(@item.Id)">Editar</button></td>
                    <td><button type="button" class="btn btn-danger" onclick="Excluir(@item.Id)">Excluir</button></td>
                </tr>
            }
        }
    </table>

    <script>
        function Excluir(id) {
            if (confirm("Deseja realmente excluir?")) {
                window.location.href = "/PlanoConta/Excluir/" + id;
            }
        }

        function Editar(id) {
            window.location.href = "/PlanoConta/Cadastro/" + id;
        }
    </script>